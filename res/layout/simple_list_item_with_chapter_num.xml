<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingBottom="2dip"
    android:paddingRight="5dip"
    android:paddingTop="2dip" > 
    <!-- android:minHeight="?android:attr/listPreferredItemHeight" -->

    <TextView
        android:id="@+id/chapter_menu_id"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="5dip"
        android:text="@string/test_chapter"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TwoLineListItem
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:mode="twoLine"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="2dip" >

        <TextView
            android:id="@+id/chapter_menu_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chapter_menu_articles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/chapter_menu_title"
            android:layout_below="@id/chapter_menu_title"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </TwoLineListItem>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:text="@string/arrow_to_right"
        android:textSize="17sp"
        android:textStyle="bold" />

</LinearLayout>